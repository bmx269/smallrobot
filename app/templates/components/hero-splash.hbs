    <section class="hero-splash">
      <div class="hero-wrapper {{splash.heroColor}} {{splash.heroLayout}}" style="{{splash.inlineBackground}}">
        <div class='overlay {{splash.heroOverlay}}'>
          <div class="container-fluid">
            <div class="row">
              <div class="hero-col">
                <div class="hero-block">
                  <div class="hero-text">
                      <h1 class="text-center {{splash.heroColor}}">
                        {{{splash.title}}}
                      </h1>
                    {{#if splash.heroByline}}
                      <p class="byline">{{splash.heroByline}}</p>
                    {{/if}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>