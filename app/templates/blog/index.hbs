{{#if page}}
  {{hero-splash page=page}}

  {{#each page.section as |section|}}
    {{page-section section=section}}
  {{/each}}

  {{#if articles}}
    {{#each (sort-by "created" articles) as |article|}}
      {{article-teaser article=article}}
    {{/each}}
  {{else}}
    {{loading-spinner}}
  {{/if}}

{{else}}
  {{loading-spinner}}
{{/if}}