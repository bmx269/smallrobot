{{#if page}}
  {{#if page.heroColor}}
    {{set-body-class page.heroColor}}
  {{/if}}

  {{#if page.heroOverlay}}
    {{set-body-class page.heroOverlay}}
  {{/if}}
  {{hero-splash page=page}}

  {{#each page.section as |section|}}
    {{page-section section=section}}
  {{/each}}
{{else}}
  {{loading-spinner}}
{{/if}}