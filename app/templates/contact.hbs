  <section class="page-section">
    <div class="outer section-background-graylight">
      <div class='overlay'>
        {{angled-divider}}
        <div class="content-wrapper">
          <div class="container-fluid">
            <div class='row'>
              <h2 class="col-12">Contact Form</h2>
              <form class="cd-form col-12 floating-labels" name="contact" netlify-honeypot="bot-field"
                {{action (route-action 'sendContactRequest' model) on="submit"}} netlify>
                  <div class="row">
                    <div class="col-12 d-none bot-field">
                      <label>Donâ€™t fill this out if you're human:
                        <input name="bot-field"></label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="fullName">Full Name</label>
                        {{input
                            name="fullName"
                            type="text"
                            value=model.fullName
                            class="form-control"
                        }}
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="organization">Organization</label>
                        {{input
                            name="organization"
                            type="text"
                            value=model.organization
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="email">Email Address</label>
                        {{input
                            name="email"
                            type="email"
                            value=model.email
                            class="form-control"
                        }}
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="phone">Phone Number</label>
                        {{input
                            name="phone"
                            placeholder="XXX-XXX-XXXX"
                            type="text"
                            value=model.phone
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <label for="message">Message</label>
                        {{textarea
                            name="message"
                            value=model.message
                            rows="4"
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>

                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <button type="submit" class="btn btn-gray"
                        disabled={{v-get model 'isTruelyInvalid'}}>Submit</button>
                    </div>
                  </div>
                </div>
                <div class="alerts">
                  <div>
                    {{#each flashMessages.queue as |flash|}}
                      {{flash-message flash=flash}}
                    {{/each}}
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
