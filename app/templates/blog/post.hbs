{{#if post}}
  {{#if post.heroActive}}
    {{ main-nav class="hero" navColor=post.navColor heroColor=post.heroColor heroOverlay=post.heroOverlay }}
    {{hero-splash splash=post}}
  {{else}}
    {{main-nav}}
  {{/if}}
  <div class="container-fluid">
    <div class="row">
      <div class="body col-12 col-md-10 col-lg-8 py-3 py-md-5 mx-auto">
        {{html-safe post.body.value}}
      </div>
    </div>
  </div>

  {{global-footer}}
{{else}}
  {{loading-spinner}}
{{/if}}